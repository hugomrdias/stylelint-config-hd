{
    "name": "stylelint-config-hd",
    "version": "0.0.2",
    "description": "Shareable stylelint config for me",
    "repository": "hugomrdias/stylelint-config-hd",
    "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
    "license": "MIT",
    "main": "index.js",
    "engines": {
        "node": ">=4"
    },
    "scripts": {
        "lint": "eslint --cache *.js src/*.js",
        "validate": "run-p lint",
        "precommit": "yarn validate",
        "version": "yarn changelog && git add CHANGELOG.md",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "files": [
        "index.js"
    ],
    "keywords": [
        "stylelint",
        "lint",
        "linter",
        "prettier",
        "config"
    ],
    "dependencies": {
        "prettier-stylelint": "^0.3.2",
        "stylelint": "^8.1.1",
        "stylelint-config-idiomatic-order": "^5.0.0"
    },
    "devDependencies": {
        "ava": "^0.22.0",
        "conventional-changelog-cli": "^1.3.3",
        "eslint": "^4.7.2",
        "eslint-config-halo": "^2.3.3",
        "husky": "^0.14.3",
        "np": "^2.16.0",
        "npm-run-all": "^4.1.1"
    },
    "peerDependencies": {
        "stylelint": "^8.1.1"
    },
    "stylelint": {
        "extends": "./index.js",
        "rules": {
            "color-hex-case": "lower",
            "color-hex-length": "short"
        }
    },
    "eslintConfig": {
        "extends": "halo/node"
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        "dist",
        "storybook-static",
        "typings"
    ]
}
